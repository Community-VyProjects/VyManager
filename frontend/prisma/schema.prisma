// Prisma Schema for VyManager Authentication & RBAC
// Better Auth compatible schema with role-based access control

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// Better Auth Core Models
// ============================================================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // RBAC
  role          Role      @default(VIEWER)

  // Relations
  sessions      Session[]
  accounts      Account[]
  activeSession ActiveSession?
  userInstanceRoles UserInstanceRole[]

  @@map("users")
}

model Session {
  id             String   @id @default(cuid())
  expiresAt      DateTime
  token          String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  lastActivityAt DateTime @default(now()) @updatedAt // Track last activity for inactivity timeout
  ipAddress      String?
  userAgent      String?

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([lastActivityAt]) // Index for cleanup queries
  @@map("sessions")
}

model Account {
  id           String  @id @default(cuid())
  accountId    String
  providerId   String
  userId       String
  accessToken  String? @db.Text
  refreshToken String? @db.Text
  idToken      String? @db.Text
  accessTokenExpiresAt DateTime?
  refreshTokenExpiresAt DateTime?
  scope        String?
  password     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
  @@map("verifications")
}

// ============================================================================
// RBAC - Role Based Access Control
// ============================================================================

enum Role {
  SUPER_ADMIN   // Full access to everything including user management
  ADMIN         // Can manage all VyOS configs but not users
  NETWORK_ADMIN // Can manage network settings (interfaces, NAT, firewall)
  OPERATOR      // Can view and make changes to specific features
  VIEWER        // Read-only access to all pages
}

// Role Permissions Matrix
// Define what each role can access

model RolePermission {
  id         String   @id @default(cuid())
  role       Role
  resource   String   // e.g., "firewall", "dhcp", "nat", "interfaces", "users"
  action     Action   // e.g., READ, CREATE, UPDATE, DELETE
  createdAt  DateTime @default(now())

  @@unique([role, resource, action])
  @@map("role_permissions")
}

enum Action {
  READ
  CREATE
  UPDATE
  DELETE
  MANAGE  // Full control (all actions)
}

// Audit Log for tracking all user actions
model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  userEmail   String
  action      String   // e.g., "CREATE_FIREWALL_RULE", "DELETE_NAT_RULE"
  resource    String   // e.g., "firewall.rule.100"
  details     Json?    // Additional context
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@map("audit_logs")
}

// ============================================================================
// Multi-Instance Management
// ============================================================================

// Site - Represents a customer/organization
model Site {
  id          String      @id @default(cuid())
  name        String      @unique
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  instances   Instance[]

  @@map("sites")
}

// Instance - Represents a VyOS router within a site
model Instance {
  id          String   @id @default(cuid())
  siteId      String
  name        String
  description String?
  host        String
  port        Int      @default(443)
  username    String
  password    String   // Will be encrypted by backend
  apiKey      String?  // Optional API key for VyOS
  vyosVersion String?  // VyOS version (e.g., "1.4", "1.5")
  protocol    String   @default("https") // http or https
  verifySsl   Boolean  @default(false)   // Verify SSL certificate
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  site          Site            @relation(fields: [siteId], references: [id], onDelete: Cascade)
  activeSessions ActiveSession[]
  userInstanceRoles UserInstanceRole[]

  @@unique([siteId, name])
  @@index([siteId])
  @@map("instances")
}

// ActiveSession - Tracks which instance a user is currently connected to
model ActiveSession {
  id             String   @id @default(cuid())
  userId         String   @unique
  instanceId     String
  sessionToken   String?  // Auth session token that created this VyOS connection
  connectedAt    DateTime @default(now())
  lastActivityAt DateTime @default(now()) @updatedAt // Track last activity for timeout

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  instance Instance @relation(fields: [instanceId], references: [id], onDelete: Cascade)

  @@index([instanceId])
  @@index([lastActivityAt]) // Index for cleanup queries
  @@map("active_sessions")
}

// ScheduledPowerAction - Tracks scheduled reboots/poweroffs
model ScheduledPowerAction {
  id              String   @id @default(cuid())
  instanceId      String   // Which VyOS instance
  actionType      String   // "reboot" or "poweroff"
  scheduledTime   DateTime // When the action will occur
  scheduledBy     String   // User ID who scheduled it
  scheduledByName String   // User name for display
  cancelled       Boolean  @default(false)
  cancelledBy     String?  // User ID who cancelled
  cancelledByName String?  // User name who cancelled
  cancelledAt     DateTime?
  createdAt       DateTime @default(now())

  @@index([instanceId])
  @@index([scheduledTime])
  @@map("scheduled_power_actions")
}

// DashboardLayout - Stores user's custom dashboard layout per instance
model DashboardLayout {
  id         String   @id @default(cuid())
  userId     String   // User who owns this layout
  instanceId String   // VyOS instance this layout is for
  layout     Json     // JSON object storing grid positions and card configurations
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, instanceId])
  @@index([userId])
  @@index([instanceId])
  @@map("dashboard_layouts")
}

// ============================================================================
// New RBAC System - Fine-Grained Per-Instance Permissions
// ============================================================================

// Feature Groups - Logical groupings of VyOS features
enum FeatureGroup {
  FIREWALL          // IPv4, IPv6, Groups
  NAT               // Source, Destination, Static
  DHCP              // DHCP Server
  INTERFACES        // Ethernet, VLANs, Dummy
  STATIC_ROUTES     // Static routing
  ROUTING_POLICIES  // Route maps, prefix lists, AS-path, community lists
  SYSTEM            // Reboot, poweroff, hostname
  CONFIGURATION     // Save, load, diff, snapshots, rollback
  DASHBOARD         // Dashboard customization
  SITES_INSTANCES   // Site & instance management (SUPER_ADMIN only)
  USER_MANAGEMENT   // User, role, permission management (SUPER_ADMIN only)
}

// Permission Levels - What a user can do with a feature
enum PermissionLevel {
  NONE   // No access
  READ   // View only
  WRITE  // Full access (create, edit, delete)
}

// CustomRole - User-defined roles (e.g., NAT_ADMIN, FIREWALL_OPERATOR)
model CustomRole {
  id          String   @id @default(cuid())
  name        String   @unique  // e.g., "NAT_ADMIN", "FIREWALL_VIEWER"
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String   // User ID who created this role

  // Relations
  permissions       FeaturePermission[]
  userInstanceRoles UserInstanceRole[]

  @@map("custom_roles")
}

// FeaturePermission - Defines what a custom role can do per feature
model FeaturePermission {
  id         String          @id @default(cuid())
  roleId     String
  feature    FeatureGroup
  permission PermissionLevel
  createdAt  DateTime        @default(now())

  // Relations
  role CustomRole @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([roleId, feature])
  @@index([roleId])
  @@map("feature_permissions")
}

// UserInstanceRole - Assigns users to instances with specific roles
// Supports both built-in roles (SUPER_ADMIN, ADMIN, VIEWER) and custom roles
model UserInstanceRole {
  id           String   @id @default(cuid())
  userId       String
  instanceId   String
  roleType     String   // "BUILT_IN" or "CUSTOM"
  builtInRole  String?  // "SUPER_ADMIN", "ADMIN", "VIEWER" (if roleType = BUILT_IN)
  customRoleId String?  // FK to CustomRole (if roleType = CUSTOM)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  assignedBy   String   // User ID who assigned this role

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  instance   Instance    @relation(fields: [instanceId], references: [id], onDelete: Cascade)
  customRole CustomRole? @relation(fields: [customRoleId], references: [id], onDelete: Cascade)

  @@unique([userId, instanceId, roleType, builtInRole, customRoleId])
  @@index([userId])
  @@index([instanceId])
  @@index([customRoleId])
  @@map("user_instance_roles")
}
